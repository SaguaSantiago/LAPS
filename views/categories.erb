    <div class="categories-container">
        <section class ="categories-section">
            <% @categories.each do |category| %>
                <button style="background: <%=category.color%>" class="category">
                    <h3><%= category.name %></h3>
                </button>
            <% end %>
                <a href="http://localhost:8000/newCategory" style="background: #00DFA2" class="category">
                    <h3>
                        <img src="/images/plus.svg" alt="plus-icon" class= "plus-icon">
                    </h3>
                </a>
        </section>
    
    </div>

<style>

    .categories-container {
        width: 100%;
        height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--bg-color);
    }

    .categories-section {
        margin-left: 100px;
        margin-right: 100px;
        display:flex;
        flex-wrap:wrap;
        gap: 20px;
        justify-content: center;
        padding: 40px 20px;
    }

    .category {
        position: relative; 
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 200px;
        height: 200px;
        padding: 30px 50px;
        color: #1A2820 ;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
        background: var(--bg-color-light);
        cursor: pointer;
        border: none;
        font-size: 28px;
        transition: transform 0.2s ease; 
        border-radius: 10px;
    }
    .plus-icon {
        width: 60px;
        height: 60px;
    }
    .category:hover {
        transform: scale(1.03);
        transition: transform 0.2s ease;
    }

    .category:active {
        transform: scale(0.97);
    }
</style>